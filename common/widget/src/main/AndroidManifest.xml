<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.widget" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application>
        <activity
            android:name=".album.app.album.AlbumActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Album.Theme.Activity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <activity
            android:name=".album.app.album.GalleryActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Album.Theme.Activity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <activity
            android:name=".album.app.album.NullActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Album.Theme.Activity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <activity
            android:name=".album.app.gallery.GalleryActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Album.Theme.Activity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <activity
            android:name=".album.app.gallery.GalleryAlbumActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Album.Theme.Activity"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <activity
            android:name=".album.app.camera.CameraActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Album.Theme.Activity.Transparent"
            android:windowSoftInputMode="stateAlwaysHidden|stateHidden" />

        <provider
            android:name=".album.provider.CameraFileProvider"
            android:authorities="${applicationId}.app.file.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            android:multiprocess="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/album_camera_provider" />
        </provider>
    </application>

</manifest>